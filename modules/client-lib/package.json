{
  "name": "@mojaloop/scheduling-bc-client-lib",
  "version": "0.0.2",
  "description": "mojaloop scheduling client lib",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/scheduling-bc/tree/main/modules/client-lib",
  "bugs": {
    "url": "https://github.com/mojaloop/scheduling-bc/issues#readme"
  },
  "contributors": [
    "Gon√ßalo Garcia <goncalogarcia99@gmail.com>",
    "Pedro Sousa Barreto <pedrob@crosslaketech.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "pre-commit": [
    "dep:check",
    "build",
    "lint",
    "test:unit"
  ],
  "scripts": {
    "start": "yarn run service",
    "service": "tsc && node dist/application/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -Rf dist",
    "pretest": "yarn run build",
    "standard": "yarn run lint",
    "lint": "yarn run build && npx eslint ./src",
    "lint:fix": "yarn run build && npx eslint ./src --fix",
    "test:integration": "jest --passWithNoTests --testMatch '**/test/integration/**/*.test.ts'",
    "test:unit": "jest --passWithNoTests --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage": "jest --passWithNoTests --coverage --coverageThreshold='{}' --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage-check": "jest --coverage --testMatch '**/test/unit/**/*.test.ts'",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "yarn run ncu -e 2",
    "dep:update": "yarn run ncu -u",
    "publish": "yarn run build && yarn version patch && yarn npm publish --tag=latest --access public"
  },
  "devDependencies": {
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "npm-check-updates": "^12.5.11",
    "ts-jest": "^27.0.7",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@mojaloop/logging-bc-public-types-lib": "0.0.3",
    "@mojaloop/scheduling-bc-private-types-lib": "workspace:*",
    "axios": "^0.26.1",
    "nock": "^13.2.4"
  }
}
