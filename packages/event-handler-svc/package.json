{
  "name": "@mojaloop/scheduling-bc-event-handler-svc",
  "version": "0.0.3",
  "description": "Mojaloop Scheduling-bc Event Handler service",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/scheduling-bc/",
  "private": false,
  "mojaloop": {
    "publish_to_dockerhub": false
  },
  "bugs": {
    "url": "https://github.com/mojaloop/scheduling-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>",
    "Elijah Okello <elijahokello90@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "start": "tsc && npm run service",
    "start:dev": "tsc && EXAMPLE_ENV_VAR=value npm run service",
    "service": "node dist/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "npm run clean:npm; npm run clean:dist",
    "clean:dist": "rm -Rf dist",
    "clean:npm": "rm -Rf node_modules",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "AUDIT_KEY_FILE_PATH=./dist/tmp_audit_key_file jest --passWithNoTests --testMatch '**/test/unit/**/*.test.ts'",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u"
  },
  "dependencies": {
    "@mojaloop/logging-bc-client-lib": "~0.1.30",
    "@mojaloop/platform-configuration-bc-client-lib": "~0.1.22",
    "@mojaloop/logging-bc-public-types-lib": "~0.1.23",
    "@mojaloop/auditing-bc-client-lib": "~0.0.15",
    "@mojaloop/auditing-bc-public-types-lib": "~0.3.2",
    "@mojaloop/platform-shared-lib-messaging-types-lib": "~0.2.103",
    "@mojaloop/platform-shared-lib-public-messages-lib": "~0.1.164",
    "@mojaloop/platform-configuration-bc-public-types-lib": "~0.2.5",
    "@mojaloop/platform-shared-lib-nodejs-kafka-client-lib": "~0.3.71",
    "@mojaloop/scheduling-bc-domain-lib": "*",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@mojaloop/logging-bc-public-types-lib": "~0.1.23",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.4.4",
    "@types/node": "^18.11.19",
    "@types/node-cache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "jest": "^29.4.3",
    "npm-check-updates": "^16.6.5",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
