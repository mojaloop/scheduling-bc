{
  "name": "@mojaloop/scheduling-bc-scheduling-svc",
  "version": "0.3.2",
  "description": "mojaloop scheduling-bc service",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/scheduling-bc/",
  "private": true,
  "mojaloop": {
    "publish_to_dockerhub": true
  },
  "bugs": {
    "url": "https://github.com/mojaloop/scheduling-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "start": "tsc && npm run service",
    "start:dev": "tsc && EXAMPLE_ENV_VAR=value npm run service",
    "service": "node dist/application/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "npm run clean:npm; npm run clean:dist",
    "clean:dist": "rm -Rf dist",
    "clean:npm": "rm -Rf node_modules",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "jest --passWithNoTests --detectOpenHandles --testMatch **/test/unit/**/*.test.ts",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u"
  },
  "dependencies": {
    "@mojaloop/logging-bc-client-lib": "^0.1.26",
    "@mojaloop/platform-configuration-bc-client-lib": "~0.1.22",
    "@mojaloop/platform-configuration-bc-public-types-lib": "0.2.5",
    "@mojaloop/security-bc-client-lib": "~0.2.3",
    "@mojaloop/security-bc-public-types-lib": "~0.2.1",
    "@mojaloop/platform-shared-lib-nodejs-kafka-client-lib": "~0.3.67",
    "express": "^4.18.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@mojaloop/logging-bc-public-types-lib": "^0.1.20",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.4.4",
    "@types/node": "^18.11.19",
    "@types/node-cache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "jest": "^29.4.3",
    "npm-check-updates": "^16.6.5",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
